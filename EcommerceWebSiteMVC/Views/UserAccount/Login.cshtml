@model EcommerceWebSite.DTO.UserLoginDTO

@{
    ViewData["Title"] = "Login";
    Layout = "_SpotStoreLayout";

}

<hr />
<section class="bg0 p-t-104 p-b-116">
    <div class="container">
        <div class="flex-w flex-tr">
            <div class="size-210 bor10 p-lr-70 p-t-55 p-b-70 p-lr-15-lg w-full-md mx-auto">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <h4 class="mtext-105 cl2 txt-center p-b-30">
                        Login
                    </h4>
                    <div class="bor8 m-b-20 how-pos4-parent">
                        <input asp-for="userName" class="stext-111 cl2 plh3 size-116 p-l-62 p-r-30" placeholder="Enter Your UserName" />
                <span asp-validation-for="userName" class="text-danger"></span>
            </div>
                    <div class="bor8 m-b-20 how-pos4-parent">
                        <input asp-for="Password" class="stext-111 cl2 plh3 size-116 p-l-62 p-r-30" placeholder="Enter Your Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
                    <div class="form-group">
                        <label class="form-check-label">
                    <input class="form-check-input" asp-for="RememberMe" /> @Html.DisplayNameFor(model => model.RememberMe)
                </label>
            </div>
                    <button class="flex-c-m stext-101 cl0 size-121 bg3 bor1 hov-btn3 p-lr-15 trans-04 pointer">
                        Login
                    </button>
        </form><br />
                <div>
                    <a class="flex-c-m stext-101 cl0 size-121 bg3 bor1 hov-btn3 p-lr-15 trans-04 pointer" asp-action="Register">Create Account</a>
                </div>
            </div>
        </div>
    </div>
    </section>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
